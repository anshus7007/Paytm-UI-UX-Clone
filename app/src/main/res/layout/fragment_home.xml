                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:layout_margin="1dp"
