                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="PassBook"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"/>

                    </LinearLayout>
                    <LinearLayout
